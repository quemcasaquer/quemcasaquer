			<googleplus translate="label">
				<label>Google +</label>
				<type>text</type>
				<visible>1</visible>
				<sort_order>4</sort_order>
				<description>Example: https://plus.google.com/ (Leave empty to hide)</description>
			</googleplus>
			<linkedin translate="label">
