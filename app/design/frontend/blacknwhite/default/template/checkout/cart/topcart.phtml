/**
 * Shoping cart header
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

$meigee_blacknwhite_general = MAGE::helper('ThemeOptionsBlacknwhite')->getThemeOptionsBlacknwhite('meigee_blacknwhite_general');
$topCartIcon = $meigee_blacknwhite_general['mycart']['icon'];
$topCartLabel = $meigee_blacknwhite_general['mycart']['label'];
$topCartCount = $meigee_blacknwhite_general['mycart']['count'];

$isDefault = $topCartIcon+$topCartLabel+$topCartCount;
if($isDefault == 0){
	$topCartIcon = 1;
	$topCartLabel = 1;
	$topCartCount = 1;
}
?>
<div class="top-cart">
<?php $_cartQty = $this->getSummaryCount()? $this->getSummaryCount() : 0 ?>
<div class="block-title<?php if(!$_cartQty) { echo (' no-items'); } ?> cart-button">
	<a id="cartHeader" href="javascript:void(0);">
		<span class="title-cart<?php if($topCartLabel == false){echo ' no-label';} ?>">
			<?php if($topCartIcon): ?>
				<?php echo MAGE::helper('ThemeOptionsBlacknwhite')->getIcon('headercart'); ?>
			<?php endif ?>
			<?php if($topCartLabel): ?>
				<?php echo $this->__('Cart') ?>
			<?php endif ?>
			<?php if($topCartCount): ?>
				<?php if($topCartIcon or $topCartLabel): ?>
				<span class="cart-divider">&nbsp;</span>
				<?php endif ?>
				<?php echo $_cartQty; ?>
			<?php endif ?>
		</span>
	</a>
</div>
<div id="topCartContent" class="block-content" style="display:none;">
	<div class="inner-wrapper"><?php // extra div to smooth slideUp and slideDown ?>
	<?php $_items = $this->getRecentItems() ?>
	<?php if(count($_items)): ?>
		<ol id="mini-cart" class="mini-products-list">
		<?php foreach($_items as $_item): ?>
			<?php echo $this->getItemHtml($_item) ?>
		<?php endforeach; ?>
		</ol>
	<?php else: ?>
		<p class="cart-empty">
			<?php echo MAGE::helper('ThemeOptionsBlacknwhite')->getIcon('headercart'); ?>
			<span><?php echo $this->__('You have no items in your shopping cart.') ?></span>
			<span class="small-label"><?php echo $this->__('Add some to cart or') ?> <a href="<?php echo Mage::helper('customer')->getLoginUrl(); ?>" class="top-link-login"><?php echo $this->__('login') ?></a></span>
		</p>
	<?php endif ?>
	<?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
		<div class="actions">
			<p class="subtotal">
				<span class="label"><?php echo $this->__('Cart Subtotal:') ?></span> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?><?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?> / <?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?><?php endif; ?>
			</p>
			<div class="clear"></div>
			<?php echo $this->getChildHtml('extra_actions') ?>
			<a href="<?php echo $this->getUrl('checkout/cart'); ?>"><span><?php echo $this->__('Go to Shopping Cart') ?></span></a>
			<button class="button" type="button" onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
		</div>
	<?php endif ?>
	</div>
</div>
<script type="text/javascript">
	/* Top Cart */
	topCart();
	
	jQuery('.top-cart #mini-cart li.item a.btn-remove').on('click', function(event){
		event.preventDefault();
		jQuery('body').append('<div class="cart-remove-box"><?php echo $this->__('Are you sure you would like to remove this item from the shopping cart?') ?><br/><a href="'+ jQuery(this).attr('href') +'" class="confirm"><span><?php echo $this->__('Ok') ?></span></a><a href="#" class="cancel"><span><?php echo $this->__('Cancel') ?></span></a></div>');
		jQuery('.cart-remove-box a').on('click', function(){
			jQuery('.cart-remove-box').remove();
		});
	});
</script>
</div>