?>


<?php if($this->getCollection()->getSize()): ?>
	<div id="toolbar-product">
        <div id="sort_order">
            <label><?php echo $this->__('Sort By') ?></label>
            <select onchange="setLocation(this.value)">
            <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                <option value="<?php echo Mage::app()->getStore()->isCurrentlySecure() ? str_replace('http://', 'https://', $this->getOrderUrl($_key, 'asc')) :  $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
                    <?php echo $this->__($_order) ?>
                </option>
            <?php endforeach; ?>
            </select>
            <?php if($this->getCurrentDirection() == 'desc'): ?>
                <a href="<?php echo Mage::app()->getStore()->isCurrentlySecure() ? str_replace('http://', 'https://', $this->getOrderUrl(null, 'asc')) :  $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>"><img src="<?php echo $this->getSkinUrl('onlinebizsoft/facebookstore/images/i_desc_arrow.gif') ?>" alt="<?php echo $this->__('Set Ascending Direction') ?>" class="v-middle" /></a>
            <?php else: ?>
                <a href="<?php echo Mage::app()->getStore()->isCurrentlySecure() ? str_replace('http://', 'https://', $this->getOrderUrl(null, 'asc')) :  $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>"><img src="<?php echo $this->getSkinUrl('onlinebizsoft/facebookstore/images/i_asc_arrow.gif') ?>" alt="<?php echo $this->__('Set Descending Direction') ?>" class="v-middle" /></a>
            <?php endif; ?>
        </div>
    </div>

<div class="toolbar">
    <div class="listing-footer">
		<span class="hmenu">
			<?php if($this->getLastPageNum()>1): ?>
                <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
            <?php else: ?>
                <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
            <?php endif; ?>
		</span>
       <div class="pagination">
            <?php echo $this->getPagerHtml() ?>         
       </div>
    </div>
</div>
<?php endif ?>
